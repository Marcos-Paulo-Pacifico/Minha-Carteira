<Window x:Class="Minha_Carteira.DeleteTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minha_Carteira"
        mc:Ignorable="d"
        Title="DeleteTypeWindow"  Height="120" Width="250" 
        MinHeight="90" MaxHeight="150" MinWidth="200" MaxWidth="300"
        Background="AliceBlue">
    <Grid>
        <Label HorizontalAlignment="Center" Content="Insira o nome da categoria a ser deletada"/>
        <TextBox Name="DeletedType" Width="150" Margin="10,44,40,10" Height="20"/>
        <Button Height="20" Margin="165,44,10,10" Width="20" Name="TypeButton" Click="TypeButton_Click">
            <Image Source="Images/check.png" MaxHeight="20" MaxWidth="20"/>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
